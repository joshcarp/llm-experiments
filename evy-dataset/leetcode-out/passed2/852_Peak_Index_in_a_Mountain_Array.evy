
func peakIndexInMountainArray:num A:[]num
    lo := 0
    hi := (len A) - 1
    while lo < hi
        mid := floor ((lo + hi) / 2)
        if A[mid] < A[mid + 1]
            lo = mid + 1
        else
            hi = mid
        end
    end
    return lo
end

func test
    assert 1 (peakIndexInMountainArray [0 1 0])
    assert 1 (peakIndexInMountainArray [0 2 1 0])
    assert 5 (peakIndexInMountainArray [0 1 2 3 4 5 4 3 2 1 0])
end
test
