
func lengthOfLastWord:num s:string
    if (len s) == 0
        return 0
    end
    words := split s " "
    words = [w for w in words if (len w) > 0]
    if (len words) == 0
        return 0
    else
        return (len words[-1])
    end
end

func test
    assert 5 (lengthOfLastWord "Hello World")
    assert 0 (lengthOfLastWord "")
    assert 0 (lengthOfLastWord "   ")
    assert 1 (lengthOfLastWord "a")
    assert 1 (lengthOfLastWord "a ")
    assert 1 (lengthOfLastWord " a")
end
test
