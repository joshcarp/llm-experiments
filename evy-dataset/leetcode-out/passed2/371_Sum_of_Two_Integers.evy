
func getSum:num a:num b:num
    sum := 0
    carry := b
    while carry != 0
        sum = a ^ carry
        carry = (a & carry) << 1
        a = sum
    end
    return sum
end

func test
    assert 3 (getSum 1 2)
    assert 7 (getSum 3 4)
    assert 0 (getSum 1 -1)
    assert -1 (getSum 1 -2)
end
test
