
func minCut:num s:string
    ls := len s
    cut := [i - 1 for i in range ls + 1]
    for i := range ls
        // odd length
        pos := 0
        while i - pos >= 0 and i + pos < ls and s[i - pos] == s[i + pos]
            cut[i + pos + 1] = min cut[i + pos + 1] (1 + cut[i - pos])
            pos = pos + 1
        end
        // even length
        pos := 1
        while i - pos + 1 >= 0 and i + pos < ls and s[i - pos + 1] == s[i + pos]
            cut[i + pos + 1] = min cut[i + pos + 1] (1 + cut[i - pos + 1])
            pos = pos + 1
        end
    end
    return cut[ls]
end

func test
    assert 0 (minCut "")
    assert 0 (minCut "a")
    assert 1 (minCut "aa")
    assert 1 (minCut "ab")
    assert 0 (minCut "aba")
    assert 2 (minCut "aab")
    assert 3 (minCut "cabababcbc")
end
test
